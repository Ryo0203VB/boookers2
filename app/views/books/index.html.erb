<h2>User info</h2>
  <% if @book.image.attached? %>
    <%= image_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>
  
<table>
   <thead>
     <h2>Books</h2>
     <tr>
     <th>Title</th>
     <th>opinion</th>
     <th clospan = "3"></th>
     </tr>
  </thead>

<tbody>
  <tr>
  <% @books.each do |book| %>
  <td>title：<%= book.title %></td>
  <td>body：<%= book.body %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=> "本当に削除しますか？"%></td>
  </tr>
<% end %>

</tbody>
</table>