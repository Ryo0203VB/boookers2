
<div class="container">
  <div class="row">
<%= render 'books/name', {user: @user, book: @book} %>

<div class="col-md-8 offset-md-1">
<table class="table">
<h2>Book detail</h2>
<tbody>

  <tr>
   <td><%= image_tag @user.get_profile_image(100,100) %><br>
    <%= link_to user_path(@user.id) do %>
    <%= @user.name %>
     <% end %></td>
    <td><%= link_to book_path(@books.id) do %>
    <%= @books.title %>
    <% end %>
  </td>
    <td><%= @books.body %></td>

  <% if @books.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
  <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm"=> "本当に削除しますか？", class: "btn btn-sm btn-danger"%></td>

  <% end %>
  </tr>

</tbody>
</table>
</div>
</div>