<script src="https://kit.fontawesome.com/2d81efc77e.js" crossorigin="anonymous"></script>

<h2>User info</h2>
  <div>

  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
       <th>Name</th>
       <th><%= @user.name %></th>
      </tr>

      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
   </tbody>
  </table>
</div>

<%= link_to edit_user_path(@user.id) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>




<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>


<h2>Book detail</h2>
<table>
<tbody>

  <% @books.each do |book| %>
  <tr>
   <td><%= image_tag @user.get_profile_image(100,100) %><br>
    <%= link_to user_path(id: current_user) do %>
    <%= @user.name %>
     <% end %></td>
    <td><%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
  </td>
    <td><%= book.body %></td>

  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=> "本当に削除しますか？"%></td>
  </tr>
<% end %>

</tbody>
</table>