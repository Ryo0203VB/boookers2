<script src="https://kit.fontawesome.com/2d81efc77e.js" crossorigin="anonymous"></script>

<h2>User info</h2>
  <div>

  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
       <th>Name</th>
       <th><%= @user.name %></th>
      </tr>

      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
   </tbody>
  </table>
</div>

<%= link_to edit_user_path(@user.id) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>




<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<table>
   <thead>
     <h2>Books</h2>
     <tr>
     <th clospan = "3"></th>
     <th>Title</th>
     <th>Opinion</th>
     </tr>
  </thead>

<tbody>

  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(100,100) %></td>
    <td><%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>

</tbody>
</table>